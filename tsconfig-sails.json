{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "isolatedModules": false,
        "jsx": "react",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "declaration": false,
        "noImplicitAny": false,
        "noImplicitUseStrict": false,
        "removeComments": true,
        "noLib": false,
        "preserveConstEnums": true,
        "suppressImplicitAnyIndexErrors": true,
        "sourceMap": false
    },
    "exclude": [
        "node_modules/*",
        "typings/browser",
        "typings/browser.d.ts",
        "assets/angular/*"
    ],
    "filesGlob": [
        "typescript/**/*.ts",
        "api/**/*.ts"
    ],
    "compileOnSave": true,
    "buildOnSave": false,
    "atom": {
        "rewriteTsconfig": false
    },
    "files": [
        "typescript/controllers/CoreController.ts",
        "typescript/services/CoreService.ts",
        "api/controllers/typescript/AdminController.ts",
        "api/controllers/typescript/BrandingController.ts",
        "api/controllers/typescript/DynamicAssetController.ts",
        "api/controllers/typescript/RecordController.ts",
        "api/controllers/typescript/RenderViewController.ts",
        "api/controllers/typescript/UserController.ts",
        "api/controllers/typescript/VocabController.ts",
        "api/services/BrandingService.ts",
        "api/services/CacheService.ts",
        "api/services/FormsService.ts",
        "api/services/PathRulesService.ts",
        "api/services/RecordsService.ts",
        "api/services/RolesService.ts",
        "api/services/UsersService.ts",
        "api/services/VocabService.ts",
        "api/services/WorkflowStepsService.ts"
    ]
}
