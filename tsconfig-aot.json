{
    "compilerOptions": {
        "target": "es5",
        "module": "es2015",
        "moduleResolution": "node",
        "sourceMap": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "lib": [
            "es2015",
            "dom"
        ],
        "noImplicitAny": true,
        "suppressImplicitAnyIndexErrors": true
    },
    "exclude": [
        "typings/**",
        "api/**",
        "typescript/**",
        "node_modules/**"
    ],
    "filesGlob": [
        "assets/angular/**/*.ts"
    ],
    "angularCompilerOptions": {
        "skipMetadataEmit": true,
        "debug": true
    }
}
